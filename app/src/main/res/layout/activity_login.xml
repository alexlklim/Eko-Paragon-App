<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/textView"
        style="@style/TextMainStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Zaloguj się"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.144">

        <TextView
            style="@style/TextStyleUsualBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail"/>

        <EditText
            android:id="@+id/etEmail"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wpisz e-mail" />

        <TextView
            style="@style/TextStyleUsualBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasło" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wpisz hasło" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/ButtonStyle"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaloguj się" />

        <TextView
            style="@style/TextStyleUsualGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nie masz jeszcze konta?"/>

        <TextView
            android:id="@+id/tvRegister"
            style="@style/LinkStyleNoPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"/>



        <TextView
            android:id="@+id/tvWithoutRegister"
            style="@style/LinkStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_without_register"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>